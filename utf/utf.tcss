Screen {
    layout: vertical;
}

.query {
    height: auto;
    SearchBox {
        margin: 1;
        max-width: 80%;
    }
    Select {
        margin: 1;
        min-width: 20;
    }
}

SearchResults {
    layout: grid;
    grid-size: 1;
    grid-rows: 8;
    grid-gutter: 1;
    margin: 1;
}

SearchResults.tiny {
    grid-size: 2;
}

SearchResults.small {
    grid-size: 3;
}

SearchResults.medium {
    grid-size: 4;
}

SearchResults.large {
    grid-size: 5;
}

Result {
    layout: grid;
    grid-size: 3 2;
    padding: 1;
    height: 8;
    border: solid green;
}

Result Static {
    text-align: center;
}

Result .name {
    column-span: 3;
}

Result:hover {
    border: heavy $primary;
}

Result:focus {
    border: heavy $secondary;
}


Footer {
    border: none;
    padding: 0 2 0 2;
}

Toast {
    padding: 2;
    margin-bottom: 1;
    width: 65;
}
